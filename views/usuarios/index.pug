extends ../layout

block content
a.btn.btn-success(href="/usuarios/create") Nuevo Usuario

br
br

table.table 
    thead
        tr
          th(scope="col") #
            th(scope="col") Nombre
            th(scope="col") Email
            th(scope="col") Verificado

    tbody
        each usuario in usuarios
            tr
                td = usuario.id
                td = usuario.nombre
                td = usuario.email
                td = usuario.verified ? 'Si' : 'No'
                td
                a.btn(href="/usuarios/' + usuario.id + ;/update") Editar
                td 
                form.inline(method='post' action='usuarios/' + usuario.id + '/delete')
                input.link-btn.btn-danger(type='submit' name='submit_param' value='Eliminar')
                  